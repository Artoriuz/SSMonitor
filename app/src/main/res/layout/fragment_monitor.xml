    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/material_blue_grey_950"
        >

        <TextView android:id="@+id/section_label" android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Monitor"
            android:textSize="@dimen/abc_text_size_display_2_material"
            android:textStyle="bold"
            android:textColor="@color/bright_foreground_material_dark"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/forca"
            android:id="@+id/forca"
            android:textColor="#ffff1222"
            android:layout_marginTop="52dp"
            android:layout_below="@+id/section_label"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="latitude"
            android:id="@+id/lat"
            android:layout_below="@+id/mnc"
            android:textColor="@color/primary_material_light"
            android:layout_alignLeft="@+id/mnc"
            android:layout_alignStart="@+id/mnc" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="longitude"
            android:id="@+id/lon"
            android:textColor="@color/primary_material_light"
            android:layout_below="@+id/lat"
            android:layout_alignLeft="@+id/lat"
            android:layout_alignStart="@+id/lat" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Medium Text"
            android:id="@+id/operadora"
            android:layout_below="@+id/forca"
            android:layout_alignLeft="@+id/forca"
            android:layout_alignStart="@+id/forca"
            android:textColor="#ff3c85ff" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="cid"
            android:textColor="@color/primary_material_light"
            android:id="@+id/cid"
            android:layout_below="@+id/operadora"
            android:layout_alignLeft="@+id/operadora"
            android:layout_alignStart="@+id/operadora" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="LAC"
            android:id="@+id/lac"
            android:layout_below="@+id/cid"
            android:layout_alignLeft="@+id/cid"
            android:layout_alignStart="@+id/cid"
            android:textColor="@color/primary_material_light"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="MCC"
            android:id="@+id/mcc"
            android:layout_below="@+id/lac"
            android:layout_alignLeft="@+id/lac"
            android:layout_alignStart="@+id/lac"
            android:textColor="@color/primary_material_light"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="MNC"
            android:id="@+id/mnc"
            android:layout_below="@+id/mcc"
            android:layout_alignLeft="@+id/forca"
            android:layout_alignStart="@+id/forca"
            android:textColor="@color/primary_material_light"
            />

    </RelativeLayout>
